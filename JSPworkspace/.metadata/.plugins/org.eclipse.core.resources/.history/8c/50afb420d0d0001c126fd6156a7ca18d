<body>
	<%
		String realPath = application.getRealPath("/data/poll.json");
	%>
	서버의 절대경로 : <%=realPath %><br>
	<hr>
	<%
		Scanner sc= new Scanner(new File(realPath));
		while(sc.hasNextLine()){	
			out.println(sc.nextLine()+"<br>");
		}
	%>
